<ul class="list-group">
  <% rooms.each do |room| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <p class='fw-bold mb-1'><%= room.room_type.humanize %></p>
        <p class='mb-1'><%= humanized_money_with_symbol(room.price) %></p>
      </div>
      <button class="btn btn-primary">Book</button>
    </li>
  <% end %>
</ul>
